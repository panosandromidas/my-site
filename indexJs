function toggle(){

   var button = document.getElementById('demo');
    if (button.innerHTML === "Click me to display Date and Time.") {
          button.innerHTML = Date();
      } else {
              button.innerHTML = "Click me to display Date and Time.";
    }
}



function comme(){
  var button = document.getElementById('comme1');
  
  
   
   if (button.innerHTML === "Comments") {
        button.innerHTML = "No comments yet!!";

      } else {
            button.innerHTML = "Comments";
    
    
    } 
}
  







       


