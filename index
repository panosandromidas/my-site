<script type="text/javascript" src="text.js"></script>
<script>
function validateForm() {
  var x = document.forms["myForm"]["firstname"].value;
  var y = document.forms['myForm']['lastname'].value;
  if (x == "" && y =="") {
    alert("Name must be filled out");
    return false;
  }
}
</script>
